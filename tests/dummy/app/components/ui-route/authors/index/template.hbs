<div class="row">
  {{#ui-block/rows as |rows|}}
    {{#each authors as |author|}}
      {{#rows.row action=(action 'select' author)}}
        <div class="title">{{author.name}}</div>
        <div class="subtitle">{{if author.email author.email 'no email'}}</div>
      {{/rows.row}}
    {{/each}}
  {{/ui-block/rows}}
</div>

<div class="row">
  {{link-to 'Add new author' 'authors.new'}}
</div>
