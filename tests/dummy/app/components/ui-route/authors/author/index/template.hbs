<div class="row">
  <div class="heading">{{author.screenName}}</div>
  <div>{{author.email}}</div>
</div>

{{#if author.blogs}}
  <div class="row">
    {{#each author.blogs as |blog|}}
      <div>{{blog.name}}</div>
    {{/each}}
  </div>
{{else}}
  <div class="row">
    No blogs
  </div>
{{/if}}

<div class="row">
  {{ui-block/json author.serialized}}
</div>

<div class="row">
  <button onclick={{action 'edit'}}>Edit</button>
  <button onclick={{action 'delete'}}>Delete</button>
</div>
